ApplicationSettings:
  app_name: "Nettidigisanat"
  app_meta_title: "Neahttadigisánit"
  short_name: "sanat"
  default_locale: "fkv"
  default_pair: ["fkv", "nob"] # ten times as used as olo, fin
  mobile_default_pair: false
  grouped_nav: true
  new_mobile_nav: true
  locales_available:
    - "fkv"
    - "fi"
    - "nb"
    - "lv"
    - "ru"
    - "et"
  # TODO: someone will have to decide on the meta keywords and
  # descriptions for google.
  meta_description: >
     Free, mobile-friendly dictionaries for Olonetsian, and Kven.
  meta_keywords: >
     kven, olonets, olonetsian, karelian, russian
  admins_to_email:
    - "trond.trosterud@uit.no"
    - "anders.lorentsen@uit.no"

Tools:
  hfst_lookup: &HFST-LOOKUP '/bin/hfst-lookup'

Morphology:
  olo:
    tool: *HFST-LOOKUP
    file: '/opt/smi/olo/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/olo/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *HFST-LOOKUP
    file: '/opt/smi/fin/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/fin/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  vep:
    tool: *HFST-LOOKUP
    file: '/opt/smi/vep/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/vep/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fkv:
    tool: *HFST-LOOKUP
    file: '/opt/smi/fkv/bin/analyser-gt-desc.hfstol'
    inverse_file: '/opt/smi/fkv/bin/generator-gt-norm-dial_Por.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  nob:
    tool: *HFST-LOOKUP
    file: '/opt/smi/nob/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/nob/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  rus:
    tool: *HFST-LOOKUP
    file: '/opt/smi/rus/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/rus/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: olo
    minority_lang: true
  - iso: fkv
    minority_lang: true
  - iso: vep
    minority_lang: true

  - iso: fin
  - iso: fit
  - iso: swe
  - iso: nob
  - iso: rus
  - iso: lav
  - iso: est

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  # olo
  - source: olo
    target: fin
    dict_source: lang
    path: 'dicts/olo-all.xml'

  - source: fin
    target: olo
    path: 'dicts/fin-olo.xml'

  - source: olo
    target: rus
    path: 'dicts/olo-rus.xml'

  - source: rus
    target: olo
    path: 'dicts/rus-olo.xml'

  # fkv
  - source: fkv
    target: nob
    path: 'dicts/fkv-nob.xml'
    show_korp_search: True
    korp_search_host: &F_KORP "http://gtweb.uit.no/f_korp"
    is_korp_default_lang: True
    corpora: 'FKV_ADMIN_20210319,FKV_BIBLE_20210319,FKV_FACTA_20210319,FKV_FICTI_20210319,FKV_NEWS_20210319'
    start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='
    input_variants: &spell_relax_fkv
      - type: "standard"
        description: !gettext "Standard"
        onscreen_keyboard: &FKV_KEYS
          - "đ"
          - "ä"
          - "ö"
        # NB: must be same as analyser name
        short_name: "fkv"

  - source: nob
    target: fkv
    path: 'dicts/nob-fkv.xml'
    show_korp_search: True
    is_korp_default_lang: True
    korp_parallel: True
    korp_search_host: *F_KORP
    link_corpus_parameter: "nob2fkv_admin_20210319-nob,nob2fkv_bible_20210319-nob,nob2fkv_facta_20210319-nob,nob2fkv_ficti_20210319-nob,nob2fkv_news_20210319-nob"
    corpora: 'NOB2FKV_ADMIN_20210319-NOB,NOB2FKV_BIBLE_20210319-NOB,NOB2FKV_FACTA_20210319-NOB,NOB2FKV_FICTI_20210319-NOB,NOB2FKV_NEWS_20210319-NOB'
    start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='

  - source: fit
    target: swe
    path: "dicts/fit-swe.xml"
    show_korp_search: True
    korp_search_host: *F_KORP
    corpora: "fit_admin_20210319,fit_bible_20210319,fit_facta_20210319,fit_ficti_20210319,fit_news_20210319,fit_laws_20210319,fit_science_20210319"
    start_query: 'http://gtweb.uit.no/ws/gt_korp?mode=fit,command=query&corpus='

  - source: swe
    target: fit
    path: "dicts/swe-fit.xml"

  # vep
  - source: vep
    target: fin
    dict_source: lang
    path: 'dicts/vep-all.xml'
    show_korp_search: True
    korp_search_host: *F_KORP
    corpora: 'VEP_WIKIPEDIA_20210319'
    start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='

  # This dictionary does not seem to exist?
  # - source: vep
  #   target: est
  #   dict_source: multi
  #   path: 'dicts/vep-all.xml'
  #   show_korp_search: True
  #   korp_search_host: *F_KORP
  #   corpora: 'VEP_WIKIPEDIA_20210319'
  #   start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='

  - source: nob
    target: fin
    path: 'dicts/nob-fin.xml'
    show_korp_search: False

  - source: fin
    target: nob
    path: 'dicts/fin-nob.xml'
    show_korp_search: False

ReaderConfig:
  Settings:
    # host path without scheme (https, http) to reader lookup API, no trailing
    # slash.
    api_host: "sanat.oahpa.no"
    # URL to serve media from, minus scheme, and no trailing slash.
    media_host: "sanat.oahpa.no"
  olo:
    multiword_lookups: false
    word_regex: |
      [\u00C0-\u1FFF\u2C00-\uD7FF\w'’]+
    word_regex_opts: "g"
